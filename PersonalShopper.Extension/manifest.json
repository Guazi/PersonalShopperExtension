{
  "name": "Personal Shopper",
  "version": "1.0",
  "description": "Let us help you shop.",
  "background_page" : "AddFromListBackground.htm",
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["Entities.js",
      "Mustache.js",
      "jQuery-1.7.1.js",
      "Utilities.js",
      "ContentScripts/ElementFinder.js",
      "ContentScripts/xml2json.js", 
      "ContentScripts/ProductService.js",  
      "ContentScripts/Strategies.js", 
      "ContentScripts/ProductPageDetector.js", 
      "ContentScripts/AddToListBookmarklet.js",
      "ShoppingListServiceClient.js",
      "ContentScripts/ProductPageMediator.js",
      "ContentScripts/ContentScript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "permissions": [
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
      "default_title": "Review your list.",
      "default_icon": "cart.png",
      "popup": "ShoppingListPage/ShoppingList.html"
  }
}